<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="Greetings" Height="600" Width="900">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="270,68,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button" VerticalAlignment="Top"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="572,222,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Hello_Button" Content="Hello" IsChecked="True" HorizontalAlignment="Left" Margin="189,222,0,0" VerticalAlignment="Top"/>
        <Button Content="DISPLAY" HorizontalAlignment="Left" Margin="393,345,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
